@model BlogAppFrontend.Models.BlogUpdateModel

<form method="post" asp-action="Update" class="p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title"/>
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription"></label>
        <textarea asp-for="ShortDescription" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input class="form-control-file" type="file" asp-for="Image"/>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-info">Kaydet</button>
    </div>
</form>

@section Css
{
    <link href="~/lib/Trumbowyg/dist/ui/trumbowyg.css" rel="stylesheet" />
}
@section JavaScript
{
    <script src="~/lib/Trumbowyg/dist/trumbowyg.js"></script>
    <script>
        $("#Description").trumbowyg();
    </script>
}